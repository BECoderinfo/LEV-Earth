import 'package:flutter/material.dart';

class AppColors {
  // Primary and secondary colors
  static const Color primaryColor = Color(0xFF022159); // Deep blue
  static const Color secondaryColor = Color(0xFF053C73); // Accent blue

  // Background and surface colors
  static const Color scaffoldBackground = Colors.white; // Clean background
  static const Color surfaceColor = Color(0xFFEEF2F9); // Light blue for cards
  static const Color backgroundColor = Colors.white; // Clean app background

  // Error colors
  static const Color errorColor = Color(0xFFDC3545); // Red for errors
  static const Color onErrorColor = Colors.white; // Contrast on error elements

  // Text colors
  static const Color primaryTextColor = Color(0xFF022159); // Primary text
  static const Color secondaryTextColor = Colors.black87; // Dark text
  static const Color tertiaryTextColor = Colors.black54; // Light text
  static const Color captionTextColor = Colors.black54; // Smaller labels

  // Border and shadow colors
  static const Color borderColor = Color(0xFFEEF2F9); // Light border
  static const Color focusedBorderColor = Color(0xFF022159); // Deep blue
  static const Color errorBorderColor = Color(0xFFDC3545); // Red for errors
  static const Color shadowColor = Color(0x29000000); // Light shadow
}